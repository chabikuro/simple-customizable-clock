      "gemini",
      "mira"
    ],
    "i18n": {
      "en": {
        "name": "Simple & Customizable Clock"
      }
    },
    "defaultLanguage": "en-US"
  },
  "devDependencies": {
    "@fitbit/sdk": "^4.1.0",
    "@fitbit/sdk-cli": "^1.7.3",
    "@types/react": "^16.9.49",
    "fitbit-sdk-types": "^4.3.9"
  },
  "scripts": {
    "build": "npx fitbit-build"
  }
